function write_log () {
	echo -e "$1"
}
if [ -z "$TERM" ]; then export TERM="xterm-256color"; fi
red=`tput -T xterm-256color setaf 1`
green=`tput -T xterm-256color setaf 2`
yellow=`tput -T xterm-256color setaf 3`
reset=`tput -T xterm-256color sgr0`
pass="${green}PASS${reset}"
fail="${red}FAIL${reset}"
warn="${yellow}WARNING${reset}"

PARAMS=""
VERBOSE=""
JSON=""
FIX="False"
while (( "$#" )); do
  case "$1" in
    -v|--verbose)
      VERBOSE="true"
      shift
      ;;
    -j|--json)
      JSON="-j"
      shift
      ;;
    -f|--fix)
      FIX="True"
      shift
      ;;
    --) # end argument parsing
      shift
      break
      ;;
    -*|--*=) # unsupported flags
      echo "Error: Unsupported flag $1" >&2
      usage
      exit 1
      ;;
    *) # preserve positional arguments
      PARAMS="$PARAMS $1"
      shift
      ;;
  esac
done
# set positional arguments in their proper place
eval set -- "$PARAMS"
PATH=$PATH:/usr/local/bin:/bin:/usr/bin:/usr/local/sbin:/usr/sbin:/sbin
